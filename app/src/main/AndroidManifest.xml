<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tarek.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icons8_news_480"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".views.sections.SectionsActivity"></activity>
        <activity
            android:name=".views.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.settings.SettingsActivity"
            android:label="@string/settings_activity_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tarek.news.views.main.MainActivity"></meta-data>
        </activity>
        <activity
            android:name=".views.search.SearchActivity"
            android:label="@string/search_label" />
    </application>

</manifest>