<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:id="@+id/fab_layout_id"
       android:layout_width="@dimen/fab_intercom_size"
       android:layout_height="@dimen/fab_intercom_size"
       android:background="@drawable/fab_background"
       tools:ignore="UselessParent">

       <!--  instead of using fab-->
       <ImageView
           android:id="@+id/fab_iv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           app:srcCompat="@android:drawable/star_big_off"
           tools:ignore="ContentDescription" />

       <ImageView
           android:id="@+id/fab_dot"
           style="@style/medium_icons_style"
           android:src="@drawable/dot"
           android:visibility="gone"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           tools:ignore="ContentDescription"
           tools:visibility="visible" />
   </RelativeLayout>

</RelativeLayout>
